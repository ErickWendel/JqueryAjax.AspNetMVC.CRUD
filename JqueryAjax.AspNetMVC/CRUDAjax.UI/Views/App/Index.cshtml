@{
    ViewBag.Title = "SINGLE PAGE APPLICATION";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/Scripts/App/CrudApp.js"></script>
}
 @section styles{
<style>
    /*usado apenas para abaixar a borda em 50px*/
    body {
        margin: 50px;
    }
</style>

 }
    <section id="conteudo" class="container">
        <div class="form-group">
            <section id="formulario">
                @* Formulário responsável por adicionar e atualizar pessoas *@
                <form action="/" method="post" id="formDados">
                    <input type="hidden" name="Id" id="idPessoa" />
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" id="nome" class="form-control" name="nome" />
                    </div>
                    <div class="form-group">
                        <label for="DataNascimento">Data de Nascimento</label>
                        <input type="date" id="DataNascimento" class="form-control" name="DataNascimento" />
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="Email" id="Email" class="form-control" name="Email" />
                    </div>

                    <div class="form-group">
                        <input type="button" id="salvar" value="Salvar" class="btn btn-success" onclick="Cadastrar()" />
                        <input type="button" id="atualizar" value="Atualizar" class="btn btn-info hidden" onclick="Atualizar()" />
                    </div>

                </form>
            </section>
        </div>

        <section id="listagem">
            <table class="table" id="tabela">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Data de Nascimento</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                @* Nosso tbody será preenchido em tempo de execução via JQUERY *@
                <tbody id="tbody"></tbody>
            </table>

        </section>
    </section>
@* Seção definida em ~Views/Shared/_Layout para renderizar javascripts*@

